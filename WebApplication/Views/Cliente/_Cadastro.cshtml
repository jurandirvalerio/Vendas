@model WebApplication.Models.Cliente.ClienteViewModel

<div class="form-horizontal">
	<hr />
	<div class="form-group">
		@Html.LabelFor(model => model.Nome, new { @class = "col-md-12" })
		<div class="col-md-12">
			<input type="text" id="nome" class="form-control" value="@Model.Nome" />
		</div>
	</div>

	<div class="form-group">
		@Html.LabelFor(model => model.DataNascimento, new { @class = "col-md-12" })
		<div class="col-md-12">
			<input type="text" data-date-format="dd/mm/yy" id="dataNascimento" class="form-control" value="@Model.DataNascimento" />
		</div>
	</div>

	<div class="form-group">
		@Html.LabelFor(model => model.Email, new { @class = "col-md-12" })
		<div class="col-md-12">
			<input type="email" id="email" class="form-control" value="@Model.Email" />
		</div>
	</div>

	<div class="form-group">
		@Html.LabelFor(model => model.Telefone, new { @class = "col-md-12" })
		<div class="col-md-12">
			<input type="tel" id="telefone" class="form-control" value="@Model.Telefone" />
		</div>
	</div>

	<div class="form-group">
		<div class="col-md-12">
			<input type="submit" id="salvar" value="Salvar" class="btn btn-default btn-success" />
		</div>
	</div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}