	<h4>ProdutoViewModel</h4>
	<hr />
	@Html.ValidationSummary(true, "", new { @class = "text-danger" })
	<div class="form-group">
		@Html.LabelFor(model => model.Codigo, htmlAttributes: new { @class = "control-label col-md-2" })
